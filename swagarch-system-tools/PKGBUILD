pkgname=swagarch-system-tools
pkgver=1.0
pkgrel=1
pkgdesc="Cross-platform configuration utilities for SwagArch"
arch=('i686' 'x86_64')
url="https://github.com/SwagArch/swagarch-system-tools"
license=('GPL2')
options=('!libtool')
depends=('wireless_tools' 'liboobs' 'polkit-gnome' 'dconf')
makedepends=('gnome-doc-utils' 'intltool')
install=swagarch-system-tools.install
source=("git+$url.git")
sha256sums=('SKIP')

build() {
    cd "${srcdir}/${pkgname}"
    ./configure --disable-gnome --disable-nautilus --disable-shares -disable-network --prefix=/usr  --sysconfdir=/etc \
        --localstatedir=/var --disable-scrollkeeper --disable-static \
        --disable-services --disable-schemas-compile LIBS="-lm -lgthread-2.0"
    make
}

package() {
    cd "${srcdir}/${pkgname}"
    make DESTDIR="${pkgdir}" install
}
